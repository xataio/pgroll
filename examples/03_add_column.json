{
  "name": "03_add_column_to_products",
  "operations": [
    {
      "add_column": {
        "table": "products",
        "up": "UPPER(name)",
        "column": {
          "name": "description",
          "type": "varchar(255)",
          "nullable": true
        }
      }
    },
    {
      "add_column": {
        "table": "products",
        "column": {
          "name": "stock",
          "type": "int",
          "nullable": false,
          "default": "100"
        }
      }
    },
    {
      "add_column": {
        "table": "products",
        "up": "name || '-category'",
        "column": {
          "name": "category",
          "type": "varchar(255)",
          "nullable": false
        }
      }
    }
  ]
}
