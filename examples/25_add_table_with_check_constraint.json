{
  "$schema": "https://raw.githubusercontent.com/xataio/pgroll/refs/heads/main/schema.json",
  "name": "25_add_table_with_check_constraint",
  "operations": [
    {
      "create_table": {
        "name": "people",
        "columns": [
          {
            "name": "id",
            "type": "integer",
            "pk": true
          },
          {
            "name": "name",
            "type": "varchar(255)",
            "check": {
              "name": "name_length",
              "constraint": "length(name) > 3"
            }
          }
        ]
      }
    }
  ]
}
